# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET           /                               controllers.CategoryController.index()

GET           /upload/category                controllers.CategoryController.prepareCategoryUploadWindow()

POST          /upload/category                controllers.CategoryController.saveCategory()

DELETE        /delete/category/:id                controllers.CategoryController.deleteCategory(id: String)

POST        /edit/category/:id           controllers.CategoryController.editCategory(id: String)

POST          /upload/comment/:id             controllers.CommentController.uploadComment(id: String)

POST          /upload/views/images/:id        controllers.VisitObjectController.uploadImages(id: String)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                   controllers.Assets.at(path="/public", file)
